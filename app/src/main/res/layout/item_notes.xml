<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#707070"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <View
        android:id="@+id/viewPriority"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:background="@drawable/red_dot"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/app_name"
           android:id="@+id/notesTitle"
           android:fontFamily="@font/bold"
            android:textSize="17sp"
           android:maxLines="1"
           android:textColor="@color/white"/>
        <TextView
            android:id="@+id/notesSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sfhiudhfuhrjbguirnirtiovimioumoistuimutirtiomrictiytiurmturioturo8yuhscuurhviughg"
            android:fontFamily="@font/regular"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="#C3BEBE"/>
        <TextView
            android:id="@+id/notesDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8 Sept 2023"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColor="@color/white"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>