<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bag_color"
        tools:context=".ui.Fragment.EditNotesFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_txt_shape"
                android:hint="Title..."
                android:id="@+id/edtTitle"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/regular"
                android:textColorHint="#F1EEEE"
                android:padding="15dp"/>
            <EditText
                android:id="@+id/edtsubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_txt_shape"
                android:hint="Subtitle.."
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/regular"
                android:textColorHint="#F1EEEE"
                android:padding="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:id="@+id/pRed"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/red_dot"
                    />
                <ImageView
                    android:id="@+id/pYellow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/yellow_dot"
                    />
                <ImageView
                    android:id="@+id/pGreen"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/green_dot"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/edtNotes"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/edit_txt_shape"
                android:hint="Notes.."
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/regular"
                android:textColorHint="#F1EEEE"
                android:padding="15dp"/>

        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnEditSaveNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/baseline_done_24"
            android:layout_margin="26dp"

            app:backgroundTint="@color/red_color" />
    </FrameLayout>